procedure test is
  procedure proc1(a : in integer, b : in out integer) is
	i, j : integer;
  begin
	i := 0;
	while b <= a loop
	  i := i + 1;
	  b := b * i;
	end;
	put(b);
  end;
  function func1(a : in integer) is
	i, j : integer;
  begin
	i := 0;
	j := 1;
	while j <= a loop
	  i := i + 1;
	  j := j * i;
	end;
	return j
  end;
  a, b, c : integer;
begin
  a := 4;
  b := 2;
  c := 1;
  proc1(a * b, c);
  put(c);
  b = func1(a * b);
  put(b);
end.
